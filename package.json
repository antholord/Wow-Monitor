{
  "name": "wow-monitor",
  "version": "1.0.2",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "rebuild": "npm rebuild --runtime=electron --target=10.4.7 --disturl=https://atom.io/download/atom-shell --abi=72",
    "electron:build": "vue-cli-service electron:build",
    "electron:publish": "vue-cli-service electron:build -p always",
    "electron:serve": "vue-cli-service electron:serve",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "ci": "cross-env-shell npm_config_node_gyp=../../node_modules/node-gyp/bin/node-gyp.js yarn --lockfile",
    "ci2": "set NODE_OPTIONS=--openssl-legacy-provider"
  },
  "main": "background.js",
  "dependencies": {
    "cross-env": "^7.0.3",
    "electron-log": "4.2.4",
    "electron-store": "6.0.1",
    "electron-updater": "4.3.5",
    "material-design-icons-iconfont": "6.1.0",
    "node-window-manager": "2.2.4",
    "robotjs": "0.6.0",
    "roboto-fontface": "0.10.0",
    "vue": "2.6.12",
    "vue-electron": "1.0.6",
    "vue-router": "3.4.6",
    "vuetify": "2.3.13",
    "vuex": "3.5.1"
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "2.2.0",
    "@typescript-eslint/eslint-plugin": "4.4.0",
    "@typescript-eslint/parser": "4.4.0",
    "@vue/cli-plugin-eslint": "~4.5.7",
    "@vue/cli-plugin-router": "~4.5.7",
    "@vue/cli-plugin-typescript": "~4.5.7",
    "@vue/cli-plugin-vuex": "~4.5.7",
    "@vue/cli-service": "~4.5.7",
    "@vue/eslint-config-standard": "5.1.2",
    "@vue/eslint-config-typescript": "7.0.0",
    "electron": "10.1.3",
    "electron-builder": "23.3.3",
    "electron-devtools-installer": "3.1.1",
    "eslint": "7.11.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "eslint-plugin-vue": "7.0.1",
    "node-gyp": "https://github.com/antholord/node-gyp.git",
    "sass": "1.27.0",
    "sass-loader": "10.0.3",
    "typescript": "~4.0.3",
    "vue-cli-plugin-electron-builder": "~2.0.0-rc.4",
    "vue-cli-plugin-vuetify": "~2.0.7",
    "vue-template-compiler": "2.6.12",
    "vuetify-loader": "1.6.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/strongly-recommended",
      "@vue/standard",
      "@vue/typescript"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "parser": "@typescript-eslint/parser"
    },
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "semi": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        2
      ],
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "vue/html-self-closing": [
        "error",
        {
          "html": {
            "void": "never",
            "normal": "never",
            "component": "always"
          },
          "svg": "always",
          "math": "always"
        }
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/antholord/Wow-Monitor.git"
  }
}